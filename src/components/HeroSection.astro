<script>
  // Smooth scroll for navigation links
  document.addEventListener('DOMContentLoaded', () => {
    const links = document.querySelectorAll('a[href^="/"]');
    links.forEach(link => {
      link.addEventListener('click', (e) => {
        const href = link.getAttribute('href');
        if (href && href !== '#' && !href.includes('mailto:') && !href.includes('http')) {
          // For same-page navigation, try to find a section with matching ID
          if (href.startsWith('/#') || href === '/') {
            e.preventDefault();
            const targetId = href.replace('/', '').replace('#', '');
            const target = targetId ? document.getElementById(targetId) : document.body;
            if (target) {
              target.scrollIntoView({ behavior: 'smooth' });
            }
          }
          // For other paths, let the browser handle navigation normally
        }
      });
    });
  });
</script>

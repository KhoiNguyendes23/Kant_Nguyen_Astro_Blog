---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Dự án - Kant Nguyễn">
  <Navbar />
  
  <main class="min-h-screen bg-bgLight dark:bg-bgDark">
    <!-- Hero Section -->
    <section class="pt-32 md:pt-36 pb-20 bg-gradient-to-br from-primary/5 to-purple-600/5">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
          Dự án của tôi
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Khám phá các dự án backend và networking mà tôi đã thực hiện
        </p>
      </div>
    </section>

    <!-- Projects Grid -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {[
            {
              title: "Hệ thống quản lý sinh viên",
              description: "Ứng dụng web quản lý thông tin sinh viên với Java Spring Boot và PostgreSQL",
              tech: ["Java", "Spring Boot", "PostgreSQL", "Thymeleaf"],
              status: "Hoàn thành",
              year: "2023"
            },
            {
              title: "API Gateway với Spring Cloud",
              description: "Xây dựng API Gateway để quản lý và định tuyến các microservices",
              tech: ["Java", "Spring Cloud", "Netflix Zuul", "Docker"],
              status: "Đang phát triển",
              year: "2024"
            },
            {
              title: "Hệ thống chat real-time",
              description: "Ứng dụng chat sử dụng WebSocket và Spring Boot",
              tech: ["Java", "Spring Boot", "WebSocket", "JavaScript"],
              status: "Hoàn thành",
              year: "2023"
            },
            {
              title: "Network Monitoring Tool",
              description: "Công cụ giám sát mạng sử dụng Java và SNMP",
              tech: ["Java", "SNMP", "JFreeChart", "Swing"],
              status: "Hoàn thành",
              year: "2023"
            },
            {
              title: "RESTful API cho e-commerce",
              description: "API backend cho ứng dụng thương mại điện tử",
              tech: ["Java", "Spring Boot", "JWT", "MySQL"],
              status: "Hoàn thành",
              year: "2023"
            },
            {
              title: "Docker Containerization",
              description: "Container hóa các ứng dụng Java với Docker",
              tech: ["Docker", "Docker Compose", "Java", "Nginx"],
              status: "Hoàn thành",
              year: "2023"
            }
          ].map(project => (
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6">
              <div class="flex items-center justify-between mb-4">
                <span class={`px-3 py-1 rounded-full text-sm font-semibold ${
                  project.status === 'Hoàn thành' 
                    ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                    : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                }`}>
                  {project.status}
                </span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{project.year}</span>
              </div>
              
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                {project.title}
              </h3>
              
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {project.tech.map(tech => (
                  <span class="px-2 py-1 bg-primary/10 text-primary text-sm rounded-md">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
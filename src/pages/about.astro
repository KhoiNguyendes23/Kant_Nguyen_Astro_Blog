                    KN
                  </div>
                </div>
              </div>
              <!-- Floating elements -->
              <div class="absolute -top-4 -right-4 w-8 h-8 bg-accent rounded-full animate-bounce"></div>
              <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-primary rounded-full animate-pulse"></div>
            </div>
          </div>

          <!-- Profile Info -->
          <div class="space-y-6">
            <div>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                Nguyễn Đăng Khôi – Kant Nguyễn
              </h2>
              <p class="text-lg text-gray-600 dark:text-gray-300 mb-4">
                <span>TP. Hồ Chí Minh, Việt Nam</span>
              </p>
              <blockquote class="text-xl italic text-primary border-l-4 border-primary pl-4">
                "Work hard in silence — let success make noise."
              </blockquote>
            </div>

            <!-- Contact Info -->
            <div class="space-y-3">
              <a href="mailto:khoind82@gmail.com" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                khoind82@gmail.com
              </a>
              <a href="https://www.linkedin.com/in/nguyen-dang-khoi-6247a337b/" target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary transition-colors">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn Profile
              </a>
              <a href="https://github.com/KhoiNguyendes23" target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-600 dark:text-gray-300 hover:text-primary transition-colors">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                GitHub Profile
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Activities Section -->
    <section class="py-20 bg-gradient-to-br from-blue-50/40 to-white dark:from-gray-800 dark:to-gray-900 relative">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 gradient-text">Hoạt động</h2>

        <!-- Grid hiển thị hoạt động -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          {[
            {
              image: `${base}/activities/volleyball-2022.jpg`,
              title: "Tham gia bóng chuyền Khoa CNTT 2022",
              description: "Tham gia giải bóng chuyền truyền thống Khoa CNTT tại HUTECH.",
              year: "2022"
            },
            {
              image: `${base}/activities/volleyball-2023.jpg`,
              title: "Tham gia bóng chuyền Khoa CNTT 2023",
              description: "Tiếp tục tham gia và hỗ trợ đội tuyển bóng chuyền khoa CNTT.",
              year: "2023"
            },
            {
              image: `${base}/activities/netcracking-2024.png`,
              title: "Hutech's Net Cracking 2024",
              description: "Tham gia cuộc thi An toàn mạng Hutech's Net Cracking 2024.",
              year: "2024"
            },
            {
              image: `${base}/activities/it-talent.png`,
              title: "Hội thi Tìm kiếm tài năng CNTT 2024",
              description: "Tham gia hội thi Tìm kiếm tài năng công nghệ thông tin 2024.",
              year: "2024"
            }
          ].map((activity, index) => (
            <div
              class="group relative bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl cursor-pointer"
              onclick={`setSelectedImage('${activity.image}')`}
            >
              <!-- Hình ảnh -->
              <div class="relative h-56">
                <img
                  src={activity.image}
                  alt={activity.title}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
                <span class="absolute top-3 left-3 px-3 py-1 bg-blue-600 text-white text-sm font-semibold rounded-full shadow-md">
                  {activity.year}
                </span>
              </div>

              <!-- Nội dung -->
              <div class="p-5 space-y-2">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-blue-600 transition-colors duration-300">
                  {activity.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed">
                  {activity.description}
                </p>
              </div>
            </div>
          ))}
        </div>

        <!-- Modal xem ảnh to -->
        <div id="imageModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm transition-opacity duration-300 hidden">
          <div class="relative max-w-4xl max-h-[90vh] p-4">
            <img
              id="modalImage"
              src=""
              alt="Preview"
              class="rounded-2xl shadow-2xl max-h-[85vh] object-contain mx-auto transition-transform duration-300 scale-95 hover:scale-100"
            />
            <button
              id="closeModal"
              class="absolute top-3 right-3 text-white bg-black/50 hover:bg-black/80 rounded-full p-2 transition"
            >
              ✕
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Cisco Certificates Section -->
    <section class="py-20">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 gradient-text">
          Chứng chỉ Cisco
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 place-items-center">
          <div class="text-center group">
            <a href="https://www.credly.com/badges/17210156-aae7-4bd9-90c7-fde448669afd/public_url" target="_blank" rel="noopener noreferrer" class="block">
              <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-4 group-hover:scale-105">
                <img
                  src={`${base}/certificates/networking-basics.png`}
                  alt="Cisco Networking Basics Certificate"
                  class="rounded-xl shadow-md h-56 w-full object-cover"
                />
              </div>
            </a>
            <p class="mt-4 text-sm font-medium text-gray-700 dark:text-gray-300">Networking Basics</p>
          </div>
          <div class="text-center group">
            <a href="https://www.credly.com/badges/fde07599-95ee-4962-aac4-f40adaedc4da/public_url" target="_blank" rel="noopener noreferrer" class="block">
              <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-4 group-hover:scale-105">
                <img
                  src={`${base}/certificates/javascript-essentials-1.png`}
                  alt="Cisco JavaScript Essentials 1 Certificate"
                  class="rounded-xl shadow-md h-56 w-full object-cover"
                />
              </div>
            </a>
            <p class="mt-4 text-sm font-medium text-gray-700 dark:text-gray-300">JS Essentials 1</p>
          </div>
          <div class="text-center group">
            <a href="https://www.credly.com/badges/76e662e9-02dd-49bb-a2ac-42df9b354d8b/public_url" target="_blank" rel="noopener noreferrer" class="block">
              <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-4 group-hover:scale-105">
                <img
                  src={`${base}/certificates/javascript-essentials-2.png`}
                  alt="Cisco JavaScript Essentials 2 Certificate"
                  class="rounded-xl shadow-md h-56 w-full object-cover"
                />
              </div>
            </a>
            <p class="mt-4 text-sm font-medium text-gray-700 dark:text-gray-300">JS Essentials 2</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 gradient-text">
          Kỹ năng
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {[
            { name: "Java", level: 90, color: "bg-orange-500" },
            { name: "Spring Boot", level: 85, color: "bg-green-500" },
            { name: "REST API", level: 88, color: "bg-blue-500" },
            { name: "PostgreSQL", level: 80, color: "bg-blue-600" },
            { name: "Docker", level: 75, color: "bg-blue-400" },
            { name: "Git & GitHub", level: 85, color: "bg-gray-600" },
            { name: "WebSocket", level: 70, color: "bg-purple-500" },
            { name: "HTML/CSS/JS", level: 82, color: "bg-yellow-500" }
          ].map(skill => (
            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl hover:scale-[1.02] transition-all duration-300">
              <div class="flex items-center justify-between mb-2">
                <span class="font-semibold text-gray-900 dark:text-white">{skill.name}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
              </div>
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                <div class={`h-2 rounded-full ${skill.color} transition-[width] duration-1000 ease-out`} style={`width: ${skill.level}%`}></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Activities & Awards Section -->
    <section class="py-20">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 gradient-text">
          Hoạt động & Giải thưởng
        </h2>
        <div class="space-y-6">
          {[
            {
              year: "2023",
              title: "Giải Nhất Bóng chuyền Khoa CNTT – HUTECH",
              description: "Đạt giải nhất trong giải bóng chuyền của khoa Công nghệ Thông tin tại trường Đại học Công nghệ TP.HCM",
              icon: "🏆"
            },
            {
              year: "2023",
              title: "Sinh viên tiêu biểu 2023",
              description: "Được vinh danh là sinh viên tiêu biểu của trường với thành tích học tập xuất sắc",
              icon: "⭐"
            },
            {
              year: "2023",
              title: "Cisco Certificates",
              description: "Chứng chỉ Networking Basics, JavaScript Essentials 1 & 2 từ Cisco Networking Academy",
              icon: "🎓"
            }
          ].map(activity => (
            <div class="flex items-start space-x-6 p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl hover:scale-[1.02] transition-all duration-300 group">
              <div class="text-4xl flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary/10 to-purple-600/10 rounded-xl group-hover:scale-110 transition-transform duration-300">
                {activity.icon}
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-3 mb-3">
                  <span class="px-3 py-1 bg-primary text-white text-sm font-semibold rounded-full">{activity.year}</span>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">{activity.title}</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">{activity.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Image modal functionality
  function setSelectedImage(imageSrc) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    
    if (modal && modalImage) {
      modalImage.src = imageSrc;
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden'; // Prevent background scrolling
    }
  }

  function closeModal() {
    const modal = document.getElementById('imageModal');
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = 'auto'; // Restore scrolling
    }
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('imageModal');
    const closeBtn = document.getElementById('closeModal');
    
    // Close modal when clicking outside the image
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          closeModal();
        }
      });
    }
    
    // Close modal when clicking the close button
    if (closeBtn) {
      closeBtn.addEventListener('click', closeModal);
    }
    
    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  });
</script>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const base = '/Kant_Nguyen_Astro_Blog';
---

<BaseLayout title="Giới thiệu - Kant Nguyễn">
  <Navbar />
  
  <main class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-blue-900/20 dark:to-purple-900/20">
    <!-- Hero Section -->
    <section class="pt-32 md:pt-36 pb-20 bg-gradient-to-br from-primary/5 to-purple-600/5">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
          Giới thiệu
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Tìm hiểu thêm về hành trình và đam mê của tôi trong lĩnh vực công nghệ
        </p>
      </div>
    </section>

    <!-- About Content -->
    <section class="py-20">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Profile Image -->
          <div class="flex justify-center lg:justify-start">
            <div class="relative group">
              <div class="w-80 h-80 rounded-full bg-gradient-to-br from-primary to-purple-600 p-1 shadow-2xl group-hover:shadow-3xl transition-all duration-500">
                <div class="w-full h-full rounded-full bg-white dark:bg-gray-800 flex items-center justify-center overflow-hidden group-hover:scale-105 transition-transform duration-500">
                  <img 
                    src={`${base}/avatar-new.png`} 
                    alt="Kant Nguyễn" 
                    class="w-full h-full object-cover rounded-full group-hover:rotate-3 transition-transform duration-500"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  />

<script>
  // Blog search functionality
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    const blogPostsContainer = document.getElementById('blogPostsContainer');
    const noPostsMessage = document.getElementById('noPostsMessage');
    
    if (searchInput && blogPostsContainer && noPostsMessage) {
      searchInput.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
        
        if (query === '') {
          // Show all posts
          blogPostsContainer.classList.remove('hidden');
          noPostsMessage.classList.add('hidden');
          return;
        }
        
        // Filter posts based on search query
        const posts = blogPostsContainer.querySelectorAll('article');
        let visibleCount = 0;
        
        posts.forEach(post => {
          const title = post.querySelector('h3')?.textContent?.toLowerCase() || '';
          const description = post.querySelector('p')?.textContent?.toLowerCase() || '';
          const tags = Array.from(post.querySelectorAll('.px-2')).map(tag => tag.textContent?.toLowerCase() || '');
          
          const matches = title.includes(query) || 
                        description.includes(query) || 
                        tags.some(tag => tag.includes(query));
          
          if (matches) {
            post.classList.remove('hidden');
            visibleCount++;
          } else {
            post.classList.add('hidden');
          }
        });
        
        // Show/hide no posts message
        if (visibleCount === 0) {
          blogPostsContainer.classList.add('hidden');
          noPostsMessage.classList.remove('hidden');
        } else {
          blogPostsContainer.classList.remove('hidden');
          noPostsMessage.classList.add('hidden');
        }
      });
    }
  });
</script>
